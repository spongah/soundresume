<h1>Genre List</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Genre Name</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
          <td><%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Genre', new_genre_path, class: 'btn btn-default' %>
<% end %>

