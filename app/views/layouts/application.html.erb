<!DOCTYPE html>
<html>
<head>
  <title>Soundresume</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="custom.css">
  <nav class="navbar navbar-inverse navbar-fluid-top">
  	<div class="container-fluid>">
  		<div class="navbar-header">
  			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainNavBar">
  				<span class="icon-bar"></span>
  				<span class="icon-bar"></span>
  				<span class="icon-bar"></span>
  			</button>
  			<%= link_to "Eric Eschelbach | Audio Engineer",       root_path, class: 'navbar-brand hidden-xs' %>
  			<%= link_to "Eric Eschelbach",       root_path, class: 'navbar-brand visible-xs' %>

  		</div>
	<div>
	  <div class="collapse navbar-collapse" id="mainNavBar">
		  <ul class="nav navbar-nav">
		  <li><%= link_to "Venues",       venues_path %></li>
		  <li><%= link_to "Consoles",       consoles_path %></li>
		  <li><%= link_to "Artists",       artists_path %></li>
		  <% if user_signed_in? && current_user.email == "ericeschelbach@gmail.com" %>
		  	<li><%= link_to "Genres",		genres_path %></li>
		  <% end %>
		  </ul>
		  <ul class="nav navbar-nav navbar-right">
		  <% if user_signed_in? %>
		  	<li class="dropdown" id="profileSettings">
		  		<a href="#" class="dropdown-toggle" data-toggle="dropdown" data-target="profileSettings"><%= current_user.email %><span class="caret">
		  		</span></a>
		  		<ul class="dropdown-menu">
				    <li><%= link_to "Profile Settings", edit_user_registration_path %></li>
				    <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
				</ul>
			</li>
		    <% else %>
		    	<li><%= link_to "Sign in", new_user_session_path %></li>
		  	<% end %>
		  </ul>
		</div>
	</div>
</nav>

</head>
<body>
	<div class="main_content">
		<%= render 'layouts/messages' %>
		<div class="col-md-offset-2 col-md-8">
			<%= yield %>	
		</div>
	</div>
	<script>
	$(document).ready(function() {
	    $(".dropdown-toggle").dropdown();
	});
	</script>

</body>
</html>
